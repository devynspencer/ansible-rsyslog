{{ ansible_managed | comment }}

ruleset(name="local") {

	if $inputname != "imfile" then {

		module(load="imklog")

		{% for log in rsyslog_local_outputs %}
		{{ log.facility | default("*") }}.{{ log.severity | default("*") }} action(
			name="local_{{ log.facility | default("*") }}"
			type="omfile"
			file="{{ log.file }}"
		)
		{% endfor %}

	}

}

$DefaultRuleset local
